<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1976D2">

    <TextView
        android:id="@+id/resetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:text="Reset Password"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn" />

    <EditText
        android:id="@+id/loginEmail"
        style="@style/Base.Widget.MaterialComponents.AutoCompleteTextView"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#FFFDFD"
        android:fontFamily="@font/tkod"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wbb"
        app:layout_constraintWidth_percent="0.95" />

    <EditText
        android:id="@+id/loginpaswd"
        style="@style/Base.Widget.MaterialComponents.AutoCompleteTextView"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/tkod"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textAlignment="viewStart"
        android:textColor="#131313"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEmail"
        app:layout_constraintWidth_percent="0.95" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/tkodb"
        android:text="Log In"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpaswd"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:id="@+id/TVSignIn"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Register"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/wbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="436dp"
        android:fontFamily="@font/tkodb"
        android:text="@string/wb"
        android:textColor="#FFFDFD"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/loglo"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toTopOf="@+id/wbb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/loglo" />

</androidx.constraintlayout.widget.ConstraintLayout>